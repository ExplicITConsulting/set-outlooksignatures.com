---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
  xmlns:xhtml="http://www.w3.org/1999/xhtml"
>
{% assign pages = site.pages | concat: site.posts %}
{% for page in pages %}
  {% if page.sitemap != false %}
  <url>
    <loc>{{ site.url }}{{ page.url | replace:'index.html','' | xml_escape }}</loc>
    <lastmod>{{ page.last_modified_at | default: page.date | date_to_xmlschema }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
    {% comment %}
      Add alternate language links here if needed.
      Example:
      {% if page.translations %}
        {% for translation in page.translations %}
          <xhtml:link rel="alternate" hreflang="{{ translation.lang }}" href="{{ site.url }}{{ translation.url }}" />
        {% endfor %}
      {% endif %}
    {% endcomment %}
  </url>
  {% endif %}
{% endfor %}
</urlset>
