---
layout: none
sitemap: false
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xhtml="http://www.w3.org/1999/xhtml"
>
{%- assign docs = site.posts | concat: site.pages -%}
{%- for doc in docs -%}
  {%- assign path_parts = doc.path | split: '/' -%}
  {%- assign lang_code = 'en' -%}
  {%- if path_parts[0] != 'index.html' and site.languages contains path_parts[0] -%}
    {%- assign lang_code = path_parts[0] -%}
  {%- endif -%}

  {%- comment -%} Filter out non-sitemap items and other special pages {%- endcomment -%}
  {%- unless
    doc.sitemap == false or
    doc.url == '/redirects.json' or
    doc.url == '/robots.txt' or
    doc.url contains '/assets/' or
    lang_code != site.default_lang
  -%}

    {%- assign last_mod = doc.last_modified_at | default: doc.date | default: site.time -%}
    <url>
      <loc>{{ doc.url | absolute_url }}</loc>
      <lastmod>{{ last_mod | date_to_xmlschema }}</lastmod>
      <changefreq>daily</changefreq>
      <priority>1.0</priority>

      {%- comment -%} 
        Find the base URL for the page, removing the language prefix.
        The `base_url_for_hreflang` will be the same for all language versions of the same page.
      {%- endcomment -%}
      {%- assign base_url_for_hreflang = doc.url -%}
      {%- if lang_code != site.default_lang and lang_code != ''-%}
        {%- assign base_url_for_hreflang = base_url_for_hreflang | remove_first: '/' | remove_first: lang_code | remove_first: '/' | prepend: '/' -%}
      {%- endif -%}

      {%- comment -%} Iterate over all languages and check for a localized version {%- endcomment -%}
      {%- for lang in site.languages -%}
        {%- assign localized_url_path = base_url_for_hreflang -%}
        {%- if lang != site.default_lang -%}
          {%- assign localized_url_path = '/' | append: lang | append: base_url_for_hreflang -%}
        {%- endif -%}

        {%- assign found_localized_doc = false -%}
        {%- for p in docs -%}
          {%- if p.url == localized_url_path -%}
            {%- assign found_localized_doc = true -%}
            {%- break -%}
          {%- endif -%}
        {%- endfor -%}

        {%- if found_localized_doc -%}
          <xhtml:link rel="alternate" hreflang="{{ lang }}" href="{{ site.url | append: localized_url_path | absolute_url }}" />
        {%- endif -%}
      {%- endfor -%}

      {%- comment -%} Add x-default link {%- endcomment -%}
      <xhtml:link rel="alternate" hreflang="x-default" href="{{ site.url | append: base_url_for_hreflang | absolute_url }}" />
    </url>
  {%- endunless -%}
{%- endfor %}
</urlset>