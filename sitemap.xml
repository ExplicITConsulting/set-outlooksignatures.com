---
layout: none
sitemap: false
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xhtml="http://www.w3.org/1999/xhtml">
{% for lang in site.languages %}{% for node in site.pages | concat: site.posts %}{% if node.url %}{% unless site.exclude_from_localization contains node.path %}
  <url>
    <loc>{% if lang == site.default_lang %}{{ node.url | absolute_url }}{% else %}{{ node.url | prepend: lang | prepend: '/' | absolute_url }}{% endif %}</loc>
    <lastmod>{{ node.last_modified_at | default: node.date | default: site.time | date_to_xmlschema }}</lastmod>
  </url>{% endunless %}{% endif %}{% endfor %}{% endfor %}
</urlset>