---
layout: none
sitemap: false
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xhtml="http://www.w3.org/1999/xhtml">
{%- assign default_lang = site.default_lang | default: "en" -%}
{%- assign languages = site.languages | default: "en" -%}
{%- assign pages_and_posts = site.pages | concat: site.posts -%}
{%- assign sitemap_urls = pages_and_posts | where_exp:"item", "item.sitemap != false" | where_exp:"item", "item.url != '/robots.txt'" | where_exp:"item", "item.url != '/redirects.json'" -%}
{%- for node in sitemap_urls -%}
{%- assign url = node.url | remove: 'index.html' -%}
{%- if url and url != "/" -%}
{%- assign is_localized = false -%}
{%- for lang in languages -%}
{%- if url contains "/" | append: lang | append: "/" -%}
{%- assign is_localized = true -%}
{%- endif -%}
{%- endfor -%}
{%- unless site.exclude_from_localization contains node.path or url contains '/assets/' or is_localized %}
  <url>
    <loc>{{ url | absolute_url }}</loc>
    <lastmod>{{ node.last_modified_at | default: node.date | default: site.time | date_to_xmlschema }}</lastmod>
    {%- for lang in languages -%}
      {%- assign alternate_url = url | prepend: lang | prepend: '/' | absolute_url -%}
      {%- if lang == default_lang -%}
        {%- assign alternate_url = url | absolute_url -%}
      {%- endif -%}
    <xhtml:link
      rel="alternate"
      hreflang="{{ lang }}"
      href="{{ alternate_url }}"
    />
    {%- endfor -%}
    <xhtml:link
      rel="alternate"
      hreflang="x-default"
      href="{{ url | absolute_url }}"
    />
  </url>
{%- endunless -%}
{%- endif -%}
{%- endfor %}
</urlset>