---
layout: none
permalink: /sitemap.xml
sitemap: false
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
    xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
    xmlns:xhtml="http://www.w3.org/1999/xhtml"
>
    {%- for doc in site.collections.sitemap_pages.docs -%}
        {%- unless
            doc.sitemap == false or
            doc.url == '/redirects.json' or
            doc.url == '/robots.txt' or
            doc.url contains '/assets/' or
            doc.url == '/sitemap.xml'
        -%}
        <url>
            <loc>{{ doc.url | absolute_url }}</loc>
            <lastmod>{{ doc.last_modified_at | default: doc.date | default: site.time | date_to_xmlschema }}</lastmod>
            <changefreq>daily</changefreq>
            <priority>1.0</priority>
            {%- if doc.alternates -%}
                {%- for alternate in doc.alternates -%}
                <xhtml:link
                    rel="alternate"
                    hreflang="{{ alternate.lang }}"
                    href="{{ site.url | append: alternate.url }}"
                />
                {%- endfor -%}
            {%- endif -%}
            <xhtml:link
                rel="alternate"
                hreflang="x-default"
                href="{{ site.url | append: doc.url }}"
            />
        </url>
        {%- endunless -%}
    {%- endfor %}
</urlset>