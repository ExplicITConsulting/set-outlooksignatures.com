---
layout: none
sitemap: false
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd"
    xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
    xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {% assign all_polyglot_docs = site.pages | concat: site.posts %}

  {% for doc in all_polyglot_docs %}
    {% unless doc.sitemap == false or doc.url == '/redirects.json' or doc.url == '/robots.txt' %}
      {% assign last_mod = doc.last_modified_at | default: doc.date | default: site.time %}
    <url>
        <loc>{{ doc.url | absolute_url }}</loc>
        <lastmod>{{ last_mod | date_to_xmlschema }}</lastmod>
        <changefreq>daily</changefreq>
        <priority>1.0</priority>
        
        {% comment %} 
          Iterate through all localized versions of the current document 
          and generate hreflang links. 
        {% endcomment %}
        {% for lang in site.languages %}
          {% if doc.has_localized_version[lang] %}
        <xhtml:link rel="alternate" hreflang="{{ lang }}" href="{{ doc.has_localized_version[lang].url | absolute_url }}" />
          {% endif %}
        {% endfor %}

        {% comment %} Add x-default link {% endcomment %}
        <xhtml:link rel="alternate" hreflang="x-default" href="{{ doc.has_localized_version[site.default_lang].url | absolute_url }}" />

    </url>
    {% endunless %}
  {% endfor %}
</urlset>