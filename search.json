---
layout: none
sitemap: false
permalink: /search.json # Ensure this is correct for your simple-jekyll-search setup
---
[
  {%- assign counter = 0 -%}
  {%- for item in site.data.search_sections_data -%}
    {%- if counter > 0 -%},{%- endif -%}
    {%- assign counter = counter | plus: 1 -%}
    {
      "title"    : {{ item.title | jsonify }},
      "content"  : {{ item.content | jsonify }},
      "url"      : {{ item.url | jsonify }},
      "date"     : {{ item.date | jsonify }},
      "category" : {{ item.category | jsonify }},
      "tags"     : {{ item.tags | join: ', ' | jsonify }}
    }
  {%- endfor -%}
]